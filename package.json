{
    "name": "vscode-add-angular2-files-fronty",
    "displayName": "Add Angular2 Files By FrontY",
    "description": "Add Angular2 files including ng2 snippets to your Visual Studio Code project By Y",
    "version": "1.0.0",
    "icon": "images/icon.png",
    "publisher": "FrontY",
    "author": {
        "name": "FrontY"
    },
    "engines": {
        "vscode": "^1.4.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/winpzs/add-angular2-files"
    },
    "bugs": {
        "url": "https://github.com/winpzs/add-angular2-files/issues"
    },
    "categories": [
        "Other",
        "Languages",
        "Snippets"
    ],
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.addAngular2FilesByFrontY",
                "title": "Add Angular2 Files By Front Y"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "",
                    "command": "extension.addAngular2FilesByFrontY",
                    "group": "Add Files"
                }
            ]
        }
    },
    "devDependencies": {
        "typescript": "^1.8.5",
        "rimraf": "^2.4.4",
        "vscode": "^0.11.0"
    },
    "dependencies": {
        "q": "^1.4.1"
    }
}